
<div class="flex">
    {{#each products}}
        <div class="p-20 bg-purple-100 w-full md:w-1/2 flex">
            <div class="bg-white rounded-lg shadow-lg">
                <img src="https://images.unsplash.com/photo-1600054800747-be294a6a0d26?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1053&q=80" alt="" class="rounded-t-lg">
                <div class="p-6">
                <h2 class="font-bold mb-2 text-2xl text-purple-800">{{title}}</h2>
                <p class="text-purple-700 mb-2">{{description}}</p>
                <p>Price: ${{price}}</p>
                    <p>Category: {{category}}</p>   
                <button> Add to Cart </button>
                </div>

            </div>
        </div>
    {{/each}}

</div>

{{#if hasNextPage}}
    <a href="/products?page={{nextPage}}"> Next </a>
{{/if}} 
{{#if hasPrevPage}}
    <a href="/products?page={{prevPage}}"> Prev </a>
{{/if}}

<p>Page {{currentPage}} of {{totalPages}} </p>

<script src="js/main.js"></script>