<div class="grid grid-cols-4 gap-4 p-10 justify-items-center">
    {{#each products}}
        <div class="max-w-sm rounded overflow-hidden shadow-lg">
            <img class="w-full h-40 object-cover" src="https://feb.kuleuven.be/drc/LEER/visiting-scholars-1/image-not-available.jpg/image" alt="">
            <div class="p-5">
                <h2 class="font-bold mb-2 text-2xl text-purple-800">{{title}}</h2>
                <p class="text-purple-700 mb-2">{{description}}</p>
                <p class="text-purple-700 mb-2">Price: ${{price}}</p>
                <p class="text-purple-700 mb-2">Category: {{category}}</p>
                <div class="flex align-center justify-center">
                    <button class="bg-purple-500 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded">
                        Agregar al carrito
                    </button>
                </div>
            </div>
        </div>
    {{/each}}
</div>


<div class="mt-5 border-gray-500 flex justify-between align-center p-10">
    <p class="text-gray-400">Page {{currentPage}} of {{totalPages}} </p>
    <div class="flex gap-5">
        {{#if hasPrevPage}}
            <a  class="border-2 rounded px-5 py-2 border-gray-400 text-gray-400" href="/products?page={{prevPage}}"> Prev </a>
        {{/if}}
        {{#if hasNextPage}}
            <a class="border-2 rounded px-5 py-2 border-gray-400 text-gray-400" href="/products?page={{nextPage}}"> Next </a>
        {{/if}} 
    </div>
</div>

